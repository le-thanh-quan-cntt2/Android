<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Logo -->
        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center"
            android:contentDescription="App Logo"
            android:src="@drawable/logidaihocnguyentrai" />

        <!-- Nhập họ tên -->
        <EditText
            android:id="@+id/etFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:hint="Mời nhập họ tên"
            android:inputType="textPersonName" />

        <!-- Chọn hệ học -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bạn đang học hệ nào?"
            android:textSize="16sp" />

        <RadioGroup
            android:id="@+id/rgProgram"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center_horizontal">

            <RadioButton
                android:id="@+id/rbCollege"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cao đẳng" />

            <RadioButton
                android:id="@+id/rbUniversity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đại học" />
        </RadioGroup>

        <!-- Chọn ngôn ngữ -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Bạn thích ngôn ngữ nào?"
            android:textSize="16sp"
            android:layout_gravity="center_horizontal" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_horizontal"
            android:layout_marginTop="8dp">

            <CheckBox
                android:id="@+id/cbC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lập trình C" />

            <CheckBox
                android:id="@+id/cbJava"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Java" />

            <CheckBox
                android:id="@+id/cbJavaScript"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="JavaScript" />
        </LinearLayout>

        <!-- Nút lưu -->
        <Button
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Lưu" />

        <!-- TextView hiển thị kết quả -->
        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text=""
            android:textSize="16sp"
            android:visibility="gone"
            android:padding="8dp"
            android:background="#E0E0E0" />

    </LinearLayout>
</ScrollView>
